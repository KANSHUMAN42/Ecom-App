<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3939FF"
    tools:context=".loginRegister.Admin_login">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/iconapp"
        android:id="@+id/imglapp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="80dp" />


    <EditText
        android:id="@+id/tvadmin_phonenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="255dp"
        android:background="#fff"
        android:layout_marginRight="15dp"
        android:hint="phone No"
        android:textAlignment="textStart"
        android:textSize="24dp" />
    <EditText
        android:id="@+id/tvadmin_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="335dp"
        android:background="#fff"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_adminlogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:background="#FFD700"
        android:text="@string/login" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/aprogressbar"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:layout_below="@id/btn_adminlogin"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
