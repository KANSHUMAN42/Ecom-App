<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.home.HomeFragment" >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width = "match_parent"
        android:id="@+id/home_tlb"
        android:layout_height = "wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:background = "@color/colorPrimary"
            android:layout_width = "match_parent"
            app:title="HOME"
            android:layout_height = "?attr/actionBarSize"
            app:layout_scrollFlags = "scroll|snap|enterAlways"
            app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme = "@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_tlb">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_margin="15dp">

            </HorizontalScrollView>
            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:columnWidth="100dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="24dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="spacingWidthUniform"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20sp"
                 android:text="Mens Fashion"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="Women Fashion"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="155dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:text="Beauty"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:text="Home appliances"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:text="Electronics"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:text="Kitchen and Dining"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:text="Furniture"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="20sp"
                android:text="Gym Assoceries"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="155dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>